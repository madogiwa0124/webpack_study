    "@typescript-eslint/parser": "^2.30.0",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^6.0.0",
    "eslint": "^7.30.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-vue": "^7.13.0",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.2",
    "json-loader": "^0.5.7",
