{
  "name": "webpack_study",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:prod",
    "build:dev": "webpack --progress --config './config/webpack/webpack.dev.js'",
    "build:dev-watch": "webpack --watch --progress --config './config/webpack/webpack.dev.js'",
    "build:prod": "webpack --config './config/webpack/webpack.prod.js'",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:type-check",
    "lint:js": "eslint --ext .vue,.js,.ts --ignore-path .gitignore .",
    "lint:css": "stylelint \"./src/**/*.vue\" \"./src/**/*.css\" \"./src/**/*.scss\"",
    "lint:type-check": "tsc -p . --noEmit",
    "format": "prettier --write --ignore-path .gitignore './**/*.{js,vue,ts,css,scss}'",
    "test": "jest --verbose",
    "test:coverage": "yarn test --coverage",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o ./dist/storybook"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.14.7",
    "@storybook/addon-actions": "^6.3.6",
    "@storybook/addon-essentials": "^6.3.6",
    "@storybook/addon-links": "^6.3.6",
    "@storybook/builder-webpack5": "^6.3.6",
    "@storybook/manager-webpack5": "^6.3.6",
    "@storybook/vue3": "^6.3.6",
    "@types/jest": "^28.1.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vue/compiler-sfc": "^3.2.2",
    "@vue/test-utils": "^2.0.0-rc.12",
    "@vue/vue3-jest": "^27.0.0-alpha.1",
    "babel-jest": "^27.2.5",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.0.0",
    "eslint": "^8.0.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.0.3",
    "html-loader": "^3.0.0",
    "html-webpack-plugin": "^5.3.2",
    "jest": "^28.1.2",
    "mini-css-extract-plugin": "^2.1.0",
    "prettier": "2.5.1",
    "sass": "^1.35.1",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.1.0",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-config-recommended-scss": "^4.3.0",
    "stylelint-scss": "^3.19.0",
