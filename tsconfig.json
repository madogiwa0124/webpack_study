{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6", // TSはECMAScript 5に変換
    "module": "es2020", // TSのモジュールはES Modulesとして出力
    // import Vue from 'vue' の書き方を許容する
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // 返り値の型を明示的に指定させる
    "noImplicitReturns": true,
    // デコレーターを有効に設定
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@js/*": ["src/javascripts/*"],
      "@css/*": ["src/styles/*"],
    }
  }
}
